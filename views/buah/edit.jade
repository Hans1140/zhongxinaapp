extends ../layout/base 
block content 
    section.content-header 
        h1 
            | Edit Buah
            small menu for editing buah data
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Level 
            li.active Here 
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Buah
                .box-tools.pull-right
                    button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form' method='post' action='/buah/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                //- - if (messages.msg_error) 
                                //-     .alert.alert-danger.alert-dismissable 
                                //-         button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                //-             | ×
                                //-         h4
                                //-             i.icon.fa.fa-ban
                                //-             | Alert! 
                                //-         | !{messages.msg_error}
                                //- - if (messages.msg_info) 
                                //-     .alert.alert-success.alert-dismissable 
                                //-         button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                //-             | ×
                                //-         h4
                                //-             i.icon.fa.fa-ban
                                //-             | Success! 
                                //-         | !{messages.msg_info}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text' value="#{data.nama}" name='nama' placeholder='Enter Nama Karyawan', autofocus).form-control
                                .form-group
                                    label
                                        | Umur
                                    input(type='text' value="#{ (umur == undefined) ? data.umur : harga }" name='umur' placeholder='Enter Umur Karyawan').form-control
                                .form-group
                                    label
                                        | Shift
                                    input(type='text' value="#{ (shift == undefined) ? data.shift : stok }" name='shift' placeholder='Enter Shift Kerja').form-control
                                .form-group
                            .box-footer
                                input(type="hidden" name="_method" value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil 
                                    |  Edit
                                a(href='/buah').btn.btn-primary.pull-right
                                    | Back