extends ../layout/base 
block content 
    section.content-header 
        h1 
            | Daftar Karyawan
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Level 
            li.active Here 
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Karyawan
                .box-tools.pull-right
                    button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form' method='post' action='/buah/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error) 
                                    .alert.alert-danger.alert-dismissable 
                                        button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert! 
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text' value='#{nama}' name='nama' placeholder='Enter Nama Karyawan', autofocus).form-control
                                .form-group
                                    label
                                        | Umur
                                    input(type='text' name='umur' placeholder='Enter Umur Karyawan').form-control
                                .form-group
                                    label
                                        | Shift Kerja
                                    input(type='text' value='#{shift}' name='shift' placeholder='Enter Shift Kerja').form-control
                                .form-group
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit
                                a(href='/buah').btn.btn-primary.pull-right
                                    | Back